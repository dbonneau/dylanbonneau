/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "baseUrl": "",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@core/*": ["app/core/*"],
      "@api/*": ["app/core/api/*"],
      "@shared/*": ["app/shared/*"],
      "@consts/*": ["app/shared/consts/*"],
      "@directives/*": ["app/shared/directives/*"],
      "@tools/*": ["app/core/tools/*"],
      "@models/*": ["app/core/models/*"],
      "@material/*": ["app/modules/angular-material/*"],
      "@generated/*": ["app/generated/*"]
    },
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
