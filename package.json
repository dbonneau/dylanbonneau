{
  "name": "dylanbonneau",
  "version": "20.0.0",
  "scripts": {
    "ng": "ng",
    "serve:ssr:dylanBonneau": "node dist/dylanbonneau/server/server.mjs",
    "start": "ng serve",
    "start:ci": "ng serve --configuration production",
    "build": "ng build",
    "build:ci": "ng build --configuration production --optimization",
    "watch": "ng build --watch --configuration development",
    "watch:ci": "ng build --watch --configuration production",
    "test": "ng test",
    "test:ci": "ng test --browsers ChromeHeadlessCI --code-coverage --watch=false",
    "test:chrome": "ng test --browsers Chrome --code-coverage --watch=true",
    "lint": "npm run lint:styles && ng lint --type-check",
    "lint:styles": "stylelint \"src/app/**/*.scss\" \"public/styles/**/*.scss\" --fix",
    "lint:ci": "ng lint",
    "lint:fix": "eslint -c .eslintrc.json --ext .ts src/ --fix",
    "commit": "git-cz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.1",
    "@angular/cdk": "^20.2.0",
    "@angular/common": "^20.2.1",
    "@angular/compiler": "^20.2.1",
    "@angular/core": "^20.2.1",
    "@angular/forms": "^20.2.1",
    "@angular/platform-browser": "^20.2.1",
    "@angular/platform-browser-dynamic": "^20.2.1",
    "@angular/platform-server": "^20.2.1",
    "@angular/router": "^20.2.1",
    "@angular/ssr": "^20.2.0",
    "@commitlint/cli": "^19.8.0",
    "cz-customizable": "^7.4.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^59.0.0",
    "express": "^4.18.2",
    "postcss": "^8.5.3",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.3",
    "rxjs": "~7.8.0",
    "stylelint": "^14.8.1",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.2.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.1",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
